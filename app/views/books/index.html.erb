<body>
<h1>Book</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", books_path(book.id)%></td>
      <td><%= link_to "Edit", edit_book_path(book.id)%></td>
      <td><%= link_to "Destroy", book_path(book.id)%></td>
    </tr>
   <% end %>
  </tbody>
 </table>
 
 <div class="flash-notifications">
  <% flash.each do |key, value| %>
   <%= content_tag(:div, value, class: key) %>
  <% end %>
</div>
 
 <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <p id="notice"></p>
 <% end %>
  
</body>
